{
  "manifest_version": 3,
  "name": "Dynamic Host Replacer",
  "version": "1.0",
  "description": "Replaces the host dynamically based on user input.",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
